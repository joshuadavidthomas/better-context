{
	"name": "btca",
	"author": "Ben Davis",
	"version": "1.0.931",
	"homepage": "https://btca.dev",
	"description": "CLI tool for asking questions about technologies using btca server",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/davis7dotsh/better-context.git"
	},
	"keywords": [
		"cli",
		"ai",
		"docs"
	],
	"engines": {
		"bun": ">=1.1.0"
	},
	"bin": {
		"btca": "bin.js"
	},
	"files": [
		"bin.js",
		"dist/btca-darwin-arm64",
		"dist/btca-darwin-x64",
		"dist/btca-linux-arm64",
		"dist/btca-linux-x64",
		"dist/btca-windows-x64.exe"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"check": "tsgo --noEmit",
		"format": "prettier --write .",
		"dev": "bun run src/index.ts",
		"build": "bun run scripts/build-binaries.ts",
		"prepublishOnly": "bun run scripts/verify-dist.ts"
	},
	"devDependencies": {
		"@babel/core": "^7.29.0",
		"@babel/preset-react": "^7.28.5",
		"@babel/preset-typescript": "^7.28.5",
		"@btca/shared": "workspace:*",
		"@inquirer/select": "^5.0.4",
		"@opentui/core": "0.1.77",
		"@opentui/react": "0.1.77",
		"@tmcp/adapter-zod": "^0.1.7",
		"@tmcp/transport-stdio": "^0.4.1",
		"@types/bun": "latest",
		"@types/node": "22",
		"@types/react": "^19.2.13",
		"@typescript/native-preview": "^7.0.0-dev.20260109.1",
		"babel-plugin-react-compiler": "^1.0.0",
		"better-result": "^2.6.0",
		"btca-server": "workspace:*",
		"commander": "^12.1.0",
		"hono": "^4.7.11",
		"prettier": "^3.7.4",
		"react": "^19.2.4",
		"tmcp": "^1.19.2",
		"web-tree-sitter": "0.25.10",
		"zod": "^4.3.6"
	}
}
